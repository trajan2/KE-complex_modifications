{
  "title": "Florian Caps Modification",
  "rules": [
    {"description": "CAPS + hjkl to arrow keys",
          "manipulators": [
              {
                  "conditions": [
                      {
                          "name": "caps_lock pressed",
                          "type": "variable_if",
                          "value": 1
                      }
                  ],
                  "from": {
                      "key_code": "j",
                      "modifiers": {
                          "optional": [
                              "any"
                          ]
                      }
                  },
                  "to": [
                      {
                          "key_code": "down_arrow"
                      }
                  ],
                  "type": "basic"
              },
              {
                  "conditions": [
                      {
                          "name": "caps_lock pressed",
                          "type": "variable_if",
                          "value": 1
                      }
                  ],
                  "from": {
                      "key_code": "k",
                      "modifiers": {
                          "optional": [
                              "any"
                          ]
                      }
                  },
                  "to": [
                      {
                          "key_code": "up_arrow"
                      }
                  ],
                  "type": "basic"
              },
              {
                  "conditions": [
                      {
                          "name": "caps_lock pressed",
                          "type": "variable_if",
                          "value": 1
                      }
                  ],
                  "from": {
                      "key_code": "h",
                      "modifiers": {
                          "optional": [
                              "any"
                          ]
                      }
                  },
                  "to": [
                      {
                          "key_code": "left_arrow"
                      }
                  ],
                  "type": "basic"
              },
              {
                  "conditions": [
                      {
                          "name": "caps_lock pressed",
                          "type": "variable_if",
                          "value": 1
                      }
                  ],
                  "from": {
                      "key_code": "l",
                      "modifiers": {
                          "optional": [
                              "any"
                          ]
                      }
                  },
                  "to": [
                      {
                          "key_code": "right_arrow"
                      }
                  ],
                  "type": "basic"
              },
              {
                  "from": {
                      "key_code": "caps_lock",
                      "modifiers": {
                          "optional": [
                              "any"
                          ]
                      }
                  },
                  "to": [
                      {
                          "set_variable": {
                              "name": "caps_lock pressed",
                              "value": 1
                          }
                      }
                  ],
                  "to_after_key_up": [
                      {
                          "set_variable": {
                              "name": "caps_lock pressed",
                              "value": 0
                          }
                      }
                  ],
                  "type": "basic"
              }
          ]
      },
	{"description": "CAPS + as to jump tabs, r go back",
		"manipulators": [
            {
                "conditions": [
                    {
                        "name": "caps_lock pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "from": {
                    "key_code": "a",
                    "modifiers": {
                        "mandatory": [
                            "shift"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "page_up",
                        "modifiers": [
                            "left_control",
                            "left_shift"
                        ]
                    }
                ],
                "type": "basic"
            },
            {
                "conditions": [
                    {
                        "name": "caps_lock pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "from": {
                    "key_code": "s",
                    "modifiers": {
                        "mandatory": [
                            "shift"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "page_down",
                        "modifiers": [
                            "left_control",
                            "left_shift"
                        ]
                    }
                ],
                "type": "basic"
            },
            {
                "conditions": [
                    {
                        "name": "caps_lock pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "from": {
                    "key_code": "r",
                    "modifiers": {
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "open_bracket",
                        "modifiers": [
                            "left_command"
                        ]
                    }
                ],
                "type": "basic"
            }
			
			
			
		]
	},
	{"description": "CAPS + y undo, Y redo",
		"manipulators": [
            {
                "conditions": [
                    {
                        "name": "caps_lock pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "from": {
                    "key_code": "y",
                    "modifiers": {
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "z",
                        "modifiers": [
                            "left_command"
                        ]
                    }
                ],
                "type": "basic"
            },
            {
                "conditions": [
                    {
                        "name": "caps_lock pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "from": {
                    "key_code": "y",
                    "modifiers": {
                        "mandatory": [
                            "shift"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "z",
                        "modifiers": [
                            "left_command",
							"left_shift"
                        ]
                    }
                ],
                "type": "basic"
            }
			
			
		]
	}
  ]
}