{
  "title": "Florian Caps Modification",
  "rules": [
    {"description": "Caps Lock to Escape on single press, Control on press and hold.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },
	{"description": "CAPS + as to jump tabs, r go back"
		"manipulators": [
            {
                "conditions": [
                    {
                        "name": "caps_lock pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "from": {
                    "key_code": "a",
                    "modifiers": {
                        "mandatory": [
                            "shift"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "page_up",
                        "modifiers": [
                            "left_control",
                            "left_shift"
                        ]
                    }
                ],
                "type": "basic"
            },
            {
                "conditions": [
                    {
                        "name": "caps_lock pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "from": {
                    "key_code": "s",
                    "modifiers": {
                        "mandatory": [
                            "shift"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "page_down",
                        "modifiers": [
                            "left_control",
                            "left_shift"
                        ]
                    }
                ],
                "type": "basic"
            },
            {
                "conditions": [
                    {
                        "name": "caps_lock pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "from": {
                    "key_code": "r",
                    "modifiers": {
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "open_bracket",
                        "modifiers": [
                            "left_command"
                        ]
                    }
                ],
                "type": "basic"
            }
			
			
			
		]
	},
	{"description": "CAPS + y undo, Y redo"
		"manipulators": [
            {
                "conditions": [
                    {
                        "name": "caps_lock pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "from": {
                    "key_code": "y",
                    "modifiers": {
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "z",
                        "modifiers": [
                            "left_command"
                        ]
                    }
                ],
                "type": "basic"
            },
            {
                "conditions": [
                    {
                        "name": "caps_lock pressed",
                        "type": "variable_if",
                        "value": 1
                    }
                ],
                "from": {
                    "key_code": "y",
                    "modifiers": {
                        "mandatory": [
                            "shift"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "z",
                        "modifiers": [
                            "left_command",
							"left_shift"
                        ]
                    }
                ],
                "type": "basic"
            }
		]
	}
  ]
}